pipeline {
    agent {
        kubernetes {
            label 'jenkins-jenkins-agent'
            defaultContainer 'dind'
        }
    }

    environment {
        PRIVATE_KEY = credentials('PRIVATE_KEY')
        PUBLIC_KEY = credentials('PUBLIC_KEY')
    }

    stages {
        stage('Setup SSH Keys') {
            steps {
                sh '''
                mkdir -p ~/.ssh
                echo "${PRIVATE_KEY}" > ~/.ssh/id_rsa
                echo "${PUBLIC_KEY}" > ~/.ssh/id_rsa.pub
                chmod 600 ~/.ssh/id_rsa
                chmod 600 ~/.ssh/id_rsa.pub
                '''
            }
        }

        stage('Prepare Environment') {
            steps {
                sh '''
                # Instalar dependencias manualmente si apt no estÃ¡ disponible
                if ! command -v apt-get &> /dev/null; then
                    echo "apt-get no disponible, preparando entorno manualmente..."
                    # Instalar curl y gnupg usando otras herramientas
                    apk add --no-cache curl gnupg lsb-release
                fi
                '''
            }
        }

        stage('Install Ansible') {
            steps {
                sh '''
                # Asegurarse de tener los repositorios configurados y Ansible instalado
                if ! command -v ansible &> /dev/null; then
                    echo "Instalando Ansible..."
                    apk add --no-cache ansible
                    ansible --version
                fi
                '''
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                cd ansible
                ansible-playbook -i inventory.ini install_ansible_and_dependencies.yaml
                '''
            }
        }
    }

}
